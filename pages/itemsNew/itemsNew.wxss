.card-container{
    background-color: white;
    width: auto;

}

.banner{
    padding: 50rpx 0 50rpx 0;
    background-color: #FFC2B4;
    text-align: center;
    font-weight: bold;
    font-size: 50rpx;
}

/* Add Item Card */
.item-card-add{
    letter-spacing: 5rpx;
    border-radius: 5%;
    margin: 25rpx 50rpx 200rpx 50rpx;
    padding: 25rpx 0rpx 25rpx 0;
    background-color: rgba(238, 223, 223, 0.32);
    display: flex;
    flex-direction: row;
    color: #8A8888;
}

.item-card-add-column{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.form-row{
    display: flex;
    flex-direction: row;
    padding: 25rpx 0;
    align-items: center;
    margin-bottom: 5rpx;
}

.form-input-field{
    padding-left: 25rpx;
    background-color: white;
    border-radius: 20rpx;
}

.img-holder{
    border-radius: 20%;
    background-color: rgba(196, 196, 196, 0.49);
    width: 400rpx;
    height: 400rpx;
    display: flex;
}

.img-holder-button{
    display: flex;
    margin: auto;
    background-color: rgba(151, 151, 151, 1);
    border-radius: 100%;
    justify-content: center;
    align-items: center;
    height: 100rpx;
    width: 100rpx;
    font-size: 50rpx;
}


.item-form{
    margin: 100rpx 50rpx 0 50rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.picker{
    display: inline;
}
.picker-selection{
    display: inline;
    font-size: 50rpx;
    margin-left: 25rpx;
}

