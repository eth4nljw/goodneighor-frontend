<view>
<image class="item-image-large" src="{{item.image_url}}" lazy-load="true"></image>
</view>



<view>
<text>{{}}</text>
</view>



<view>
    <view class="flex-container">
        <view class="other-container">
            <text>{{item.name}}</text>
            <open-data type="userNickName"></open-data>
            <view class="third-container">
                <view class="make-like-button3">{{item.category}}</view>
                <view class="make-like-button1">{{item.value}}积分</view>
                <view class="make-like-button2">可兑换</view>
            </view>
        </view>
    </view>
    <view>
        <text>{{item.description}}</text>
    </view>

</view>
