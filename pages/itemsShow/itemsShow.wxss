/* indicators */
.indicator{
    border-radius: 10%;
    padding: 5rpx 10rpx 5rpx 10rpx;
    margin-right: 25rpx;
}
.item-category{
    background-color: #FEE8E8;
}

.item-freebie{
    background-color: #6CDB38;
}

.item-exchange{
    background-color: #B5C7E3;
}

.item-request{
    background-color: #F5AA40;
}

/* item image area */
.item-image-large{
    height: 700rpx;
    width: 750rpx;
    border-radius: 0% 0% 20% 20%;
}

/* item details area */
.item-details{
    display: flex;
    flex-direction: column;
    margin: 25rpx;
    justify-content: left;
}

.item-details-row{
    width: 600rpx;
    display: flex;
    flex-direction: row;
    justify-content: left;
    margin-bottom: 25rpx;
}