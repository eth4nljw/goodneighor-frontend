<!--pages/bids/bids.wxml-->
<image class="title" src="/image/mybids.jpg"></image>
<view class="bids-card" wx:for="{{bids}}" wx:for-item="bid">
    <view>
        <image scaleToFill  class="item-image-menu" src="{{bid.item.image_url}}" lazy-load="true"></image>
    </view>
    <view class="addmargin">
        <view>
            <text>{{bid.owner_item.name}}</text>
        </view>
        <text>{{bid.owner_item.description}}</text>
    </view>
    <view class="changeflex-direction">
    <block wx:if="{{bid.owner_item.is_freebie}}">
        <text class="make-like-button2">免费</text>
    </block>
    <block wx:else>
        <text class="make-like-button2">可兑换</text>
    </block>
    <block wx:if="{{bid.item.status=='accepted'}}">
        <text>完成</text>
    </block>
    <block wx:if="{{bid.item.status=='declined'}}">
        <text>已拒绝</text>
    </block>
    <block else>
        <text class="make-like-button3">待确定</text>
    </block>
    </view> 
</view>

