/* Cards */
.horizontal-card-image{
    width: 33%;
    height:200rpx;
    border-radius: 20%;
}

.my-item-container{
    background-color: rgba(239,239,239,0.46);
    border-radius: 5%;
    align-items: center;
    margin-bottom: 25rpx;
}
.container-want{
    height: 180rpx;
    margin-bottom: 20rpx;
    margin-top: 120rpx;
}

/* Note area */
.note-section{
display: flex;
flex-direction: column;
align-items: center;
}
.note-input{
    width: 500rpx;
    padding:25rpx;
    border-radius: 10%;
    justify-content: center;
    background-color: #F2F2F2;
}

/* Buttons */
.submit{
    display: block;
    text-align: center;
    left: 10%;
    margin-top: -5%;
}

/* Flex utility classes */
.flex-container{
    display: flex;
}
.flex-container-column{
    margin-left: 25rpx;
    display: flex;
    flex-direction: column;
}

.margin-h-large{
    margin: 0 75rpx; 
}

.margin-h-small{
    margin: 0 25rpx;
}

.flex-container-row{
    display: flex;
    flex-direction: row;
}

.bottom {
    margin-top: auto;
}



