/* pages/itemsIndex/itemsIndex.wxss */
.title{
    display: flex;
    width: 100%;
}

.flex-container {
    display: flex;
    background-color:whitesmoke;
}

.icons {
    width: 160rpx;
    border: 2px solid yellow;
    flex-direction: inherit;
    background-color: #fa8181;
}  

.icons:first-child {
    margin-right: 10px;
} 
.icons li{
    padding-bottom: 10rpx;
}

.index{
    width: 100%;
}

.navbar{
    text-align: right;
} 

.item{
    flex: content;
    border: 2px solid yellow;
}

.main{
    float: left;
    padding: 5rpx; 
    /* background-color: whitesmoke; */
    width: 180rpx;
    margin-top: 18rpx;
}

.item-image-menu{
    border-radius: 100%;
    border: 2px solid #eaf75e;
    box-shadow: 5px;
    width: 140rpx;
    height: 140rpx;
}

.card{
    float: left;
    width: 25%;
    box-sizing: border-box;
    padding: 10rpx;
    min-width: 150rpx;
}

.detail{
    text-align: center;
}
/* .icons{
    height: 100%;
} */  
.other-container {
    display: flex;
    flex-wrap: wrap;
  }

.navbar {
    border: 1rpx solid;
}

.pic{
    display: block;
    width: 100rpx;
    height: 70rpx;
}

.icons:nth-child(2){
    margin-top: 20rpx;
}